body {
	  font-family: verdana; 
	  font-size: 1.2em;
  }

  ul {
	list-style-type: square;
  }

  li button {
	float: right;
  }

  li {
	height: 2em;
	border-top: black 1px solid;
  }

  li:last-child {
	border-bottom: black 1px solid;
  }

  li.todo {
	display: flex;
	justify-content: space-between;
  }

  li.todo form {
	width: 100%;
	display: flex;
	justify-content: space-between;
  }

  li.todo input[type=text] {
	width: 100%;
  }

  li.todo span {
      display: block;
	  width: 100%;
  }

  li.todo img {
	width: 16px;
	height: 16px;
	margin-top: 5px;
	margin-right: 10px;
  }

  form {
	display: flex;
	justify-content: space-between;
  }

  input#add_entry_input {
	width: 100%;
  }
